@model EcoCyan.Models.LixoColetado

@{
    ViewData["Title"] = "Nova Coleta";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">Registrar nova coleta</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TipoLixo" class="form-label"></label>
                    <input asp-for="TipoLixo" class="form-control" />
                    <span asp-validation-for="TipoLixo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="QuantidadeLixo" class="form-label"></label>
                    <input asp-for="QuantidadeLixo" class="form-control" />
                    <span asp-validation-for="QuantidadeLixo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LocalColeta" class="form-label"></label>
                    <input asp-for="LocalColeta" class="form-control" />
                    <span asp-validation-for="LocalColeta" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdUser" class="form-label"></label>
                    <select asp-for="IdUser" class="form-select" asp-items="ViewBag.IdUser"></select>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Registrar" class="btn btn-primary px-4" />
                </div>
            </form>
        </div>
    </div>
</div>
