@model EcoCyan.Models.LixoColetado

@{
    ViewData["Title"] = "Nova Coleta";
}

<h1>@ViewData["Title"]</h1>

<h4>Registrar nova coleta</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoLixo" class="control-label"></label>
                <input asp-for="TipoLixo" class="form-control" />
                <span asp-validation-for="TipoLixo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeLixo" class="control-label"></label>
                <input asp-for="QuantidadeLixo" class="form-control" />
                <span asp-validation-for="QuantidadeLixo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalColeta" class="control-label"></label>
                <input asp-for="LocalColeta" class="form-control" />
                <span asp-validation-for="LocalColeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.NomeUser" class="control-label"></label>
                <select asp-for="IdUser" class="form-group" asp-items="ViewBag.IdUser"></select>
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


