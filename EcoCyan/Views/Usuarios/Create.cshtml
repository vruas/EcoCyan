@model EcoCyan.Models.Usuarios

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<h1>@ViewData["Title"]</h1>

<h4>Usuário</h4>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeUser" class="control-label">Nome</label>
                <input asp-for="NomeUser" class="form-control" />
                <span asp-validation-for="NomeUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailUser" class="control-label">Email</label>
                <input asp-for="EmailUser" class="form-control" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaUser" class="control-label">Senha</label>
                <input asp-for="SenhaUser" class="form-control" />
                <span asp-validation-for="SenhaUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUser" class="control-label">Tipo de Usuário</label>
                <input asp-for="TipoUser" class="form-control" />
                <span asp-validation-for="TipoUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
