@model EcoCyan.Models.Usuarios


@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir este usuário?</h3>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Ususario</dt>
        <dd class="col-sm-10">@Model.IdUser</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.NomeUser</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EmailUser</dd>
        <dt class="col-sm-2">Senha</dt>
        <dd class="col-sm-10">@Model.SenhaUser</dd>
        <dt class="col-sm-2">Tipo de Usuário</dt>
        <dd class="col-sm-10">@Model.TipoUser</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUser" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
