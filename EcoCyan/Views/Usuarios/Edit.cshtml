@model EcoCyan.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuário";
}

<h1>@ViewData["Title"]</h1>

<h4>Usuário</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeUser" class="control-label"></label>
                <input asp-for="NomeUser" class="form-control" />
                <span asp-validation-for="NomeUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailUser" class="control-label"></label>
                <input asp-for="EmailUser" class="form-control" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaUser" class="control-label"></label>
                <input asp-for="SenhaUser" class="form-control" />
                <span asp-validation-for="SenhaUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUser" class="control-label"></label>
                <input asp-for="TipoUser" class="form-control" />
                <span asp-validation-for="TipoUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
