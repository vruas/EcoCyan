@model EcoCyan.Models.Usuarios

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Usuário</dt>
        <dd class="col-sm-10">@Model.IdUser</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.NomeUser</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EmailUser</dd>
        <dt class="col-sm-2">Senha</dt>
        <dd class="col-sm-10">@Model.SenhaUser</dd>
        <dt class="col-sm-2">Tipo de Usuário</dt>
        <dd class="col-sm-10">@Model.TipoUser</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdUser" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
