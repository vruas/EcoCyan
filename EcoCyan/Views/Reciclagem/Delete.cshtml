@model EcoCyan.Models.Reciclagem

@{
    ViewData["Title"] = "Excluir Reciclagem";
}


<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que você deseja excluir esse registro de reciclagem?</h3>

<div>
    <h4>Reciclagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Reciclagem
        </dt>
        <dd class="col-sm-10">
            @Model.IdReciclagem
        </dd>
        <dt class="col-sm-2">
            Data Reciclagem
        </dt>
        <dd class="col-sm-10">
            @Model.DataReciclagem
        </dd>
        <dt class="col-sm-2">
            Quantidade Reciclada
        </dt>
        <dd class="col-sm-10">
            @Model.QuantidadeReciclada
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Model.User.NomeUser
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReciclagem" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
