@model EcoCyan.Models.PontoDeColeta


@{
    ViewData["Title"] = "Deletar";
}


<h3>Tem certeza que desja excluir esse ponto de coleta?</h3>

<div>
    <h4>Ponto de Coleta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Ponto de Coleta
        </dt>
        <dd class="col-sm-10">
            @Model.IdPontoColeta
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.NomePontoColeta
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Model.EnderecoPontoColeta
        </dd>
        <dt class="col-sm-2">
            Contato
        </dt>
        <dd class="col-sm-10">
            @Model.ContatoPontoColeta
        </dd>
        <dt class="col-sm-2">
            Entrega
        </dt>
        <dd class="col-sm-10">
            @Model.EntregaLixo.DataEntrega
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPontoColeta" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>

