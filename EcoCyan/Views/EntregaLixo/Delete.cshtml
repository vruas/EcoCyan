@model EcoCyan.Models.EntregaLixo

@{
    ViewData["Title"] = "Excluir Entrega de Lixo";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir esta entrega de lixo?</h3>
<div>
    <h4>Entrega de Lixo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Entrega
        </dt>
        <dd class="col-sm-10">
            @Model.IdEntregaLixo
        </dd>
        <dt class="col-sm-2">
            Data de Entrega
        </dt>
        <dd class="col-sm-10">
            @Model.DataEntrega
        </dd>
        <dt class="col-sm-2">
            Lixo Coletado
        </dt>
        <dd class="col-sm-10">
            @Model.lixoColetado.IdLixoColetado
        </dd>
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Model.User.NomeUser
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEntregaLixo" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
