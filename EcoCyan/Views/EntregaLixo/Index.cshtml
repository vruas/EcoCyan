@model IEnumerable<EcoCyan.Models.EntregaLixo>

@{
    ViewData["Title"] = "Entregas de Lixo";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">Nova Entrega de Lixo</a>
    </p>

    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID Entrega</th>
                    <th>Data de Entrega</th>
                    <th>Lixo Coletado</th>
                    <th>Usuário</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdEntregaLixo</td>
                        <td>@item.DataEntrega</td>
                        <td>@item.lixoColetado.IdLixoColetado</td>
                        <td>@item.User.NomeUser</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdEntregaLixo" class="btn btn-primary">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdEntregaLixo" class="btn btn-info">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.IdEntregaLixo" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
